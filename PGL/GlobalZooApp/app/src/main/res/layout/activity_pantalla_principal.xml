<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaPrincipal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/cambioPantallaZoos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cambioPantallaZoo"
            android:text="@string/pasar_pantalla_zoo" />

        <Button
            android:id="@+id/cambioPantallaAnimales"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="cambioPantallaAnimales"
            android:text="@string/pasar_pantalla_animales" />

        <Button
            android:id="@+id/cambioPantallaEspecies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pasar_pantalla_especie" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>