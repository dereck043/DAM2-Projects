<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PantallaPrincipal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="35dp"
            android:gravity="center"
            android:text="Bienvenido"
            android:textStyle="bold"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="121dp"
            android:minWidth="50dp"
            app:srcCompat="@drawable/ic_baseline_spa_24" />

        <Button
            android:id="@+id/cambioPantallaZoos"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:onClick="cambioPantallaZoo"
            android:layout_marginTop="20dp"
            android:text="@string/pasar_pantalla_zoo" />

        <Button
            android:id="@+id/cambioPantallaAnimales"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:onClick="cambioPantallaAnimales"
            android:text="@string/pasar_pantalla_animales" />

        <Button
            android:id="@+id/cambioPantallaEspecies"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:onClick="cambioPantallaEspecies"
            android:text="@string/pasar_pantalla_especie" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>