<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PantallaEspecie">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">
    <Button
        android:id="@+id/irGuardarNuevoAnimal2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ir_guardar_nuevo_animal" />

    <Button
        android:id="@+id/zooVolverMain2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2C673AB7"
        android:onClick="cambioPantallaAnterior"
        android:text="@string/pasar_pantalla_main"
        android:textColor="#BA000000" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>