<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="es.system.dereckecc">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GlobalZooApp">

        <activity
            android:name=".activity.PantallaEspecie"
            android:exported="false"
            android:label="@string/pantallaEspecie"/>
        <activity
            android:name=".activity.PantallaZoo"
            android:exported="false"
            android:parentActivityName=".PantallaPrincipal"
            android:label="@string/pantallaZoo" />
        <activity
            android:name=".activity.PantallaAnimal"
            android:exported="false"
            android:label="@string/pantallaAnimales" />
        <activity
            android:name=".PantallaPrincipal"
            android:exported="true"
            android:label="@string/pantallaPrincipal">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>